<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/articleframe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".view.fragment.homeCycle.Home_artical_Fragment" >

    <RelativeLayout
        android:id="@+id/article_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".view.fragment.homeCycle.Home_artical_Fragment">

        <SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/margin_left_TV"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_right_TV"
            android:background="@drawable/dark_gray_btn">


        </SearchView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleartical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/add"
            android:layout_below="@+id/searchview"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/eclipse_add"
            android:padding="8dp"
            android:src="@drawable/ic_add_black_24dp" />

    </RelativeLayout>

</FrameLayout>