<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/articalcardview"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/backimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/article" />

        <TextView
            android:id="@+id/articaltextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="20dp"
            android:text="    للوقايه من الامراض"
            android:textColor="@color/colorPrimaryDarkgray"
            android:background="@color/colorAccent5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/like"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="37dp"
            android:layout_height="49dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="15dp"
            android:button="@drawable/checkbox_image"
            android:padding="@dimen/_20sdp"
            android:visibility="visible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>