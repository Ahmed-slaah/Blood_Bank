<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/articalcardview"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/article">

        <TextView
            android:id="@+id/articaltextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:text="    للوقايه من الامراض"
            android:textColor="@color/colorPrimaryDarkgray"
            android:background="@color/colorAccent5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cardview_stroke"
            android:padding="15dp"
            android:visibility="visible"
            app:srcCompat="@drawable/like" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cardview_stroke"
            android:padding="15dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/likeee" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>