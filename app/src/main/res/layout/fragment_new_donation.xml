<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_donation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.homeCycle.NewDonationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/newdobation_name2"
                style="@style/et_style1"
                android:hint="@string/name" />

            <EditText
                android:id="@+id/newdobation_age2"
                style="@style/et_style1"
                android:hint="@string/age"
                android:inputType="number" />

            <RelativeLayout
                android:id="@+id/relative1"
                style="@style/et_style1">

                <Spinner
                    android:id="@+id/bloodtypr_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView7"
                style="@style/et_style1" />

            <EditText
                android:id="@+id/newdobation_needs2"
                style="@style/et_style1"

                android:hint="@string/mount"
                android:inputType="number" />

            <RelativeLayout
                style="@style/et_style1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/map" />

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="46dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_gps_fixed_black_24dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                style="@style/et_style1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/government_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                style="@style/et_style1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <EditText
                android:id="@+id/editText6"
                style="@style/et_style1"

                android:hint="@string/phone_number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editText7"
                style="@style/et_style1"
                android:layout_height="@dimen/_140sdp"
                android:hint="@string/notes"
                android:padding="@dimen/_40sdp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/dark_red_btn"
                android:text="ارسال"
                android:textColor="@color/colorPrimaryDarkgray"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>