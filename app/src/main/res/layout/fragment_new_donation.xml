<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.homeCycle.NewDonationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/newdobation_name2"
                style="@style/et_style1"
                android:hint="الاسم"
                 />

            <EditText
                android:id="@+id/newdobation_age2"
                style="@style/et_style1"
                android:hint="العمر"
                android:inputType="number" />

            <RelativeLayout
                android:id="@+id/relative1"
                style="@style/et_style1"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bloodtypr_spinner"
                      />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView7"
                style="@style/et_style1"
                  />

            <EditText
                android:id="@+id/newdobation_needs2"
                style="@style/et_style1"

                android:hint="عدد الاكياس"
                android:inputType="number" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/et_style1">

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="46dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_gps_fixed_black_24dp"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                style="@style/et_style1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/government_spinner"
                      />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                style="@style/et_style1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_spinner"
                      />
            </RelativeLayout>

            <EditText
                android:id="@+id/editText6"
                style="@style/et_style1"
                 
                android:hint="رقم الهاتف"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editText7"
                style="@style/et_style1"
                android:layout_height="@dimen/_140sdp"
                android:hint="ملاحظات:"
                android:padding="@dimen/_40sdp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/colorPrimaryDarkgray"
                android:background="@drawable/dark_red_btn"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                android:layout_gravity="center"
                android:text="ارسال" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>