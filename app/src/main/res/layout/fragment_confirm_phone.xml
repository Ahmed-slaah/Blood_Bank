<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.loginCycle.ConfirmPhoneFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="288dp"
            android:layout_height="384dp"

            android:src="@drawable/login_logo"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/Confirm_Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView8"
            android:padding="@dimen/padding_TV"
            android:layout_marginEnd="@dimen/margin_right_TV"
            android:layout_marginStart="@dimen/margin_left_TV"
            android:background="@drawable/gray_button"
            android:hint="الجوال"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:inputType="number">
        </EditText>
        <Button
            android:layout_width="@dimen/width_btn"
            android:layout_height="@dimen/high_btn"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dark_gray_btn"
            android:text="ارسال"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/Confirm_Confirm"
            android:layout_marginTop="@dimen/margin_top_TV">

        </Button>
    </RelativeLayout>
</FrameLayout>